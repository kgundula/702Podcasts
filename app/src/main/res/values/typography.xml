<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="podcast_text_headline_dark">#deffffff</color>
    <color name="podcast_text_title_dark">#deffffff</color>
    <color name="podcast_text_subhead_dark">#deffffff</color>
    <color name="podcast_text_body2_dark">#deffffff</color>
    <color name="podcast_text_body1_dark">#deffffff</color>
    <color name="podcast_text_caption_dark">#8affffff</color>
    <color name="podcast_text_menu_dark">#deffffff</color>
    <color name="podcast_text_button_dark">#deffffff</color>

    <color name="podcast_text_primary_dark">#ffffffff</color>
    <color name="podcast_text_secondary_dark">#b3ffffff</color>
    <color name="podcast_text_hint_dark">#4dffffff</color>
    <color name="podcast_text_disabled_dark">#4dffffff</color>


    <color name="podcast_text_headline_light">#de000000</color>
    <color name="podcast_text_title_light">#de000000</color>
    <color name="podcast_text_subhead_light">#de000000</color>
    <color name="podcast_text_body2_light">#de000000</color>
